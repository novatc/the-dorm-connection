<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/shadow_blue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_corners_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/setting"
                    android:textAlignment="center"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:text="@string/you"
                    android:textAlignment="center"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btn_select_dorm"
                    android:layout_width="@dimen/btn_edit_profile_width"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/patriarch"
                    android:text="@string/btn_select_dorm"
                    android:textColor="@color/white" />
                <Button
                    android:id="@+id/btn_my_posts"
                    android:layout_width="@dimen/btn_edit_profile_width"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/patriarch"
                    android:text="@string/btn_my_posts"
                    android:textColor="@color/white" />
                <Button
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="@dimen/btn_edit_profile_width"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/patriarch"
                    android:text="@string/btn_edit_profile"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_edit_wg"
                    android:layout_width="@dimen/btn_edit_profile_width"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/patriarch"
                    android:text="@string/btn_edit_wg"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_profile_logout"
                    android:layout_width="@dimen/btn_edit_profile_width"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/patriarch"
                    android:text="@string/btn_edit_profile_logout"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_delet_profile"
                    android:layout_width="@dimen/btn_edit_profile_width"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/btn_delete_profile_margin_top"
                    android:backgroundTint="@color/radical_red"
                    android:text="@string/delete_account"
                    android:textColor="@color/white" />
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>