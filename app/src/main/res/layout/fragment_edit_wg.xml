<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/shadow_blue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_corners_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setting"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="30sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="@string/WG"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="@dimen/et_edit_profile"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/edit_profile_edit_text"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/sign_up_name"
                android:inputType="textPersonName" />

            <ImageView
                android:id="@+id/img_wg_invitation_code"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/baseline_qr_code_2_24"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="@string/WG_invitation_code"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"></TextView>

            <Button
                android:id="@+id/edit_profile_safe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/patriarch"
                android:text="@string/btn_safe"></Button>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>